    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ResultsFragment">

    <fragment
        android:id="@+id/ResultsFragment"
        android:name="com.example.airweatherapp.ResultsFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_ResultsFragment_to_DetailFragment"
            app:destination="@id/DetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/DetailFragment"
        android:name="com.example.airweatherapp.DetailFragment"
        android:label="@string/second_fragment_label"
